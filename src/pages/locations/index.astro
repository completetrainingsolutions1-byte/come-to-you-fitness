<style>
  .hero {
    background: linear-gradient(135deg, var(--primary-green) 0%, #2db92d 100%);
    color: var(--white);
    padding: 4rem 0;
    text-align: center;
  }

  .hero h1 {
    color: var(--white);
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.8;
  }

  .locations-section {
    padding: 4rem 0;
  }

  .locations-section h2 {
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-intro {
    text-align: center;
    font-size: 1.1rem;
    color: var(--medium-gray);
    max-width: 800px;
    margin: 0 auto 3rem;
    line-height: 1.8;
  }

  .locations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .location-card {
    padding: 2rem;
    background-color: var(--white);
    border: 2px solid var(--light-gray);
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    text-decoration: none;
    color: var(--dark-gray);
    display: flex;
    flex-direction: column;
  }

  .location-card:hover {
    border-color: var(--primary-orange);
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .location-card h3 {
    color: var(--primary-green);
    margin-bottom: 1rem;
    font-size: 1.4rem;
  }

  .location-desc {
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .location-services {
    list-style: none;
    margin-bottom: 1.5rem;
  }

  .location-services li {
    padding-left: 1.5rem;
    position: relative;
    margin-bottom: 0.5rem;
    color: var(--medium-gray);
  }

  .location-services li:before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: var(--primary-green);
    font-weight: 700;
  }

  .learn-more {
    color: var(--primary-orange);
    font-weight: 600;
    margin-top: auto;
  }

  .also-serving {
    background-color: #f7fafc;
    padding: 2rem;
    border-radius: 0.5rem;
    text-align: center;
  }

  .also-serving h3 {
    color: var(--primary-green);
    margin-bottom: 1rem;
  }

  .also-serving p {
    color: var(--medium-gray);
    font-size: 1.05rem;
    line-height: 1.8;
  }

  .why-mobile {
    padding: 4rem 0;
    background-color: #f7fafc;
  }

  .why-mobile h2 {
    text-align: center;
    margin-bottom: 3rem;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .benefit {
    text-align: center;
    padding: 2rem;
    background-color: var(--white);
    border-radius: 0.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .benefit h3 {
    color: var(--primary-green);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .service-overview {
    padding: 4rem 0;
  }

  .service-overview h2 {
    text-align: center;
    margin-bottom: 3rem;
  }

  .overview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .overview-item {
    text-align: center;
    padding: 1.5rem;
  }

  .overview-item h3 {
    color: var(--primary-green);
    margin-bottom: 0.75rem;
  }

  .cta-section {
    padding: 4rem 0;
    background: linear-gradient(135deg, var(--dark-gray) 0%, var(--medium-gray) 100%);
    color: var(--white);
    text-align: center;
  }

  .cta-section h2 {
    color: var(--white);
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }

  .btn-large {
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
  }

  .guarantee-text {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--primary-orange);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .locations-grid {
      grid-template-columns: 1fr;
    }

    .benefits-grid,
    .overview-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
